{% extends "base.html.twig" %}
{% block title %}Abonnement{% endblock %}

{% block header %}
<section class="home-slider owl-carousel">
    <div class="slider-item" style="background-image: url({{ asset('front/img/slider-1.jpg') }}";>
      
      <div class="container">
        <div class="row slider-text align-items-center justify-content-center">
        </div>
      </div>

  </div>
</section>

{% endblock %}


	


{% block body %}
<style>

		.container_i {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 20px;
		}
		.subscription {
			text-align: center;
			padding: 30px;
			border-radius: 12px;
			box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
			max-width: 350px;
			width: 100%;
			transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
		}
		.subscription:hover {
			transform: translateY(-5px);
			box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
		}
		.subscription h2 {
			margin-bottom: 20px;
			font-size: 28px;
		}
		.subscription p {
			color: #333;
			font-size: 16px;
			margin-bottom: 20px;
		}
		.subscription button {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			padding: 16px 32px;
			font-size: 18px;
			border: none;
			border-radius: 8px;
			color: white;
			cursor: pointer;
			transition: transform 0.2s ease-out;
			text-decoration: none;
			outline: none;
			position: relative;
			overflow: hidden;
		}
		.subscription button::before {
			content: '';
			position: absolute;
			top: 50%;
			left: 50%;
			width: 300%;
			height: 300%;
			background-color: rgba(255, 255, 255, 0.2);
			transition: all 0.6s ease-out;
			border-radius: 50%;
			z-index: 0;
			transform: translate(-50%, -50%) scale(0);
		}
		.subscription button:hover::before {
			transform: translate(-50%, -50%) scale(1);
		}
		.subscription button:hover {
			transform: scale(1.05);
		}
		.subscription button span {
			position: relative;
			z-index: 1;
		}

		/* Définition des couleurs pour chaque abonnement */
		.subscription.silver {
			background-color: #c0c0c0;
			box-shadow: 0 8px 16px rgba(192, 192, 192, 0.4);
		}
		.subscription.gold {
			background-color: #ffd700;
			box-shadow: 0 8px 16px rgba(255, 215, 0, 0.4);
			
		}
		.subscription.classic {
			background-color: #4caf50;
			box-shadow: 0 8px 16px rgba(76, 175, 80, 0.4);
		}
		.subscription button.gold {
			background-color: #ffbb00;
		}
		.subscription button.silver {
			background-color: #9e9e9e;
		}
		.subscription button.classic {
			background-color: #388e3c;
		}
	</style>

	<div class="clearfix mb-5 pb-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12 text-center heading-wrap">
					<h2>Abonnements</h2>
					{#<span class="back-text">Our Trainers</span>#}
				</div>
			</div>
		</div>
	</div>
	<div class="container_i">
		

		<div class="subscription silver">
			<h2>Abonnement Silver</h2>
			<p>Un ensemble complet de fonctionnalités avec un support prioritaire.</p>
			<form action="{{ path('app_handle_subscription_form') }}" method="POST">
				<input type="hidden" name="abonnement" value="Silver">
				<button class="silver" type="submit">
					<span>choisir cet abonnement</span>
				</button>
			</form>
		</div>
		<div class="subscription gold">
			<h2>Abonnement Gold</h2>
			<p>Accès complet à tous les services premium avec une assistance 24/7.</p>
			<form action="{{ path('app_handle_subscription_form') }}" method="POST">
				<input type="hidden" name="abonnement" value="Gold">
				<button class="gold" type="submit">
					<span>choisir cet abonnement</span>
				</button>
			</form>
		</div>

		<div class="subscription classic">
			<h2>Abonnement Classic</h2>
			<p>Accès de base à nos fonctionnalités principales avec un support standard.</p>
			<form action="{{ path('app_handle_subscription_form') }}" method="POST">
				<input type="hidden" name="abonnement" value="Classic">
				<button class="classic" type="submit">
					<span>choisir cet abonnement</span>
				</button>
			</form>
		</div>
	</div>
	<br>

{% endblock %}

{% extends "base.html.twig" %}

{% block title %}Formulaire de Paiement{% endblock %}

{% block header %}
	<section class="home-slider owl-carousel">
    <div class="slider-item" style="background-image: url({{ asset('front/img/slider-1.jpg') }}";>
      </div>
  </section>
{% endblock %}
{% block body %}
<style>
.container-j {
			width: 400px;
			margin: 0 auto;
			padding: 20px;
			
		}
		body {
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background-image: {{ asset('front/img/slider-1.jpg') }};
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		h1 {
			text-align: center;
			margin-bottom: 20px;
			color: #333333;
		}

		label {
			display: block;
			margin-bottom: 8px;
			font-weight: bold;
			color: #555555;
		}

		input[type="text"],
		input[type="number"] {
			width: calc(100% - 22px);
			padding: 10px;
			border: 1px solid #dddddd;
			border-radius: 4px;
			margin-bottom: 15px;
			transition: border-color 0.3s ease-in-out;
		}

		input[type="text"]:focus,
		input[type="number"]:focus {
			border-color: #007bff;
		}

		input[type="submit"] {
			width: 100%;
			padding: 12px;
			background-color: #007bff;
			color: #ffffff;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			transition: background-color 0.3s ease-in-out;
		}

		input[type="submit"]:hover {
			background-color: #0056b3;
		}
	</style>

	<div class="container-j">

		<h1>Formulaire de Paiement</h1>
		{{ form_start(form) }}
		<div>
			{{ form_row(form.cardHolderName) }}
		</div>
		<div>
			{{ form_row(form.cardNumber) }}
		</div>
		<div>
			{{ form_row(form.expirationDate) }}
		</div>
		<div>
			{{ form_row(form.cvv) }}
		</div>
		<div>
			{{ form_row(form.submit) }}
		</div>
		{{ form_end(form) }}
	</div>

{% endblock %}

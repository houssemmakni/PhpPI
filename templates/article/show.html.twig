{% extends 'base-back.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1><i class="fas fa-file-alt"></i> Article Details</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ article.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre_article</th>
                            <td>{{ article.titreArticle }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% if article.image %}
                                    <img src="{{ asset('uploads/article_images/' ~ article.image) }}"
                                        alt="Article Image" width="150" height="167">
                                {% else %}
                                    No Image
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Description_article</th>
                            <td>{{ article.descriptionArticle }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ article.prix }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>

                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>

                {{ include('article/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

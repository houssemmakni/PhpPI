<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
  <div style="background-color: #f5f5f5; width: 600px; padding: 30px; border-radius: 5px; margin: 0 auto; box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
      <div class="form-group">
        {{ form_label(form.subject, 'Subject', {'label_attr': {'class': 'col-sm-5 control-label', 'style': 'font-weight: bold; font-size: 22px;'}}) }}
        <div class="col-sm-8">
          {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'style': 'height: 52px; font-size: 20px; border: 2px solid #ddd; width: 500px'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-4 control-label', 'style': 'font-weight: bold; font-size: 22px;'}}) }}
        <div class="col-sm-8">
          {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'height: 200px; font-size: 20px; border: 2px solid #ddd; width: 500px'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.userEmail, 'Email Address', {'label_attr': {'class': 'col-sm-4 control-label', 'style': 'font-weight: bold; font-size: 22px;'}}) }}
        <div class="col-sm-8">
          {{ form_widget(form.userEmail, {'attr': {'class': 'form-control', 'style': 'height: 52px; font-size: 20px; border: 2px solid #ddd; width: 500px'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.Response, 'Response', {'label_attr': {'class': 'col-sm-4 control-label', 'style': 'font-weight: bold; font-size: 22px;'}}) }}
        <div class="col-sm-8">
          {{ form_widget(form.Response, {'attr': {'class': 'form-control', 'style': 'height: 52px; font-size: 20px; border: 2px solid #ddd; width: 500px'}}) }}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10"> <button type="submit" class="btn btn-primary" style="font-size: 18px;">{{ button_label|default('Save') }}</button> </div>
      </div>
      
    {{ form_end(form) }}
  </div>
</div>

{% extends 'base-back.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-primary mb-4">Reclamation Details</h1>

        <div class="card mb-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Id</dt>
                    <dd class="col-sm-9">{{ reclamation.id }}</dd>

                    <dt class="col-sm-3">DateReclamation</dt>
                    <dd class="col-sm-9">{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d H:i:s') : '' }}</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">{{ reclamation.description }}</dd>

                    <dt class="col-sm-3">UserId</dt>
                    <dd class="col-sm-9">{{ reclamation.userEmail }}</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="badge badge-primary">{{ reclamation.status }}</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="alert alert-info" role="alert">
            This reclamation is important. Please review it carefully.
        </div>

        <a href="{{ path('app_reclamation_table') }}" class="btn btn-primary">Back to List</a>

        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning ml-2">
            <i class="bi bi-pencil-fill"></i> Edit
        </a>

        {{ include('reclamation/_delete_form.html.twig') }}
    </div>

    <!-- Include Bootstrap Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css"></script>
{% endblock %}

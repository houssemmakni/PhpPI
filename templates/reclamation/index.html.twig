{% extends 'base.html.twig' %}

{% block body %}
    <section class="animated text-center py-5" style="background-color: #3498db; color: #fff;">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h1 class="display-3 mb-4">Discover Our Services</h1>
                    <p class="lead">Transforming outdated or neglected gym spaces into modern and functional fitness centers. Our expert team is dedicated to providing top-notch services, including equipment upgrades, layout redesign, flooring replacement, and more.</p>
                    <a href="#" class="btn btn-outline-light btn-lg mt-3">Learn More</a>
                </div>
            </div>
        </div>
    </section>
    <section class="animated bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h2 class="text-center mb-4 text-primary">Explore Our Location</h2>
                    <div class="embed-responsive embed-responsive-16by9 mb-4">
                        <iframe class="embed-responsive-item"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1dYOUR_MAP_COORDINATES!2dYOUR_LONGITUDE!3dYOUR_LATITUDE!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3AYOUR_GYM_NAME!2sYOUR_GYM_NAME!5e0!3m2!1sen!2sus!4vYOUR_MAP_API_KEY"
                                width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">%
                    <h2 class="modal-title">Thank You!</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="lead">Thank you for reaching out! We'll get back to you soon.</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
